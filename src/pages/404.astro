---
import { Image } from "astro:assets";
const path = Astro.url.pathname;
import "@/_global.css";
---

<script>
  import { handleKeyDown } from "@/helper";
  const elem = document.getElementById("hi");
  elem?.addEventListener("keydown", handleKeyDown);
</script>

<div class="bg-neutral-900 text-amber-50 flex flex-col justify-center items-center h-screen w-screen gap-2.5" id="hi">
    <Image src="https://astro.build/favicon.svg" alt="Favicon" width={32} height={32} />
    <h1>404 Not Found</h1>
    <span class="font-mono bg-neutral-800">Path: {path}</span>
    <p>The page you are looking for does not exist.</p>
    <a href="/">Go back to <span class="underline">Home</span></a>
</div>
